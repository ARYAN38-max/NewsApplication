<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle" >
            <corners android:radius="30dip" />
            <stroke android:width="10dip" android:color="#5e7974" />
            <gradient android:angle="-90" android:startColor="#345953" android:endColor="#00FFD6" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle" >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#00FFD0" />
            <solid android:color="#00FFD7"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle" >
            <corners android:radius="30dip" />
            <stroke android:width="1dip" android:color="#00FFD0" />
            <gradient android:angle="-90" android:startColor="#00FFD7" android:endColor="#00FFD7" />
        </shape>
    </item>
</selector>